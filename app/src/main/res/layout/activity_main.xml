<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Title"
        android:inputType="text" />

    <EditText
        android:id="@+id/editTextDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description"
        android:inputType="text" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="saveNote"
        android:text="SAVE"
        app:backgroundTint="#777575" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="loadNote"
        android:text="LOAD"
        app:backgroundTint="#777575" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="updateDescription"
        android:text="UPDATE DESCRIPTION"
        app:backgroundTint="#777575" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="deleteDescription"
        android:text="DELETE DESCRIPTION"
        app:backgroundTint="#777575" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="deleteNote"
        android:text="DELETE NOTE"
        app:backgroundTint="#777575" />
    <TextView
        android:id="@+id/textViewDocument"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>